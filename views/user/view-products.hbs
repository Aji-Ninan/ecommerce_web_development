                    <div class="card-body">
                        <h5 class="card-title">{{this.Name}}</h5>
                        <h6>{{this.Category}}</h6>
                        <p class="card-text">{{this.Description}}</p>
                        <h6>â‚¹{{this.Price}}</h6>
                        {{!-- <a href="/add-to-cart/{{this._id}}" class="btn btn-primary">Add to cart</a> --}}
                        <button onClick="addToCart('{{this._id}}')" class="btn btn-primary">Add to cart</button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>

